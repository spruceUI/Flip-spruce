<theme>
    <formatVersion>4</formatVersion>
    <view name="system">
        <image name="background" extra="true">
            <path>./_art/var/dot.png</path>
            <tile>false</tile>
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
        </image>
        <image name="poster" extra="true">
            <path>./${system.theme}/art/poster.jpg</path>
            <tile>false</tile>
            <origin>1 0</origin>
            <pos>1 0</pos>
            <size>0 1</size>
        </image>
        <carousel name="systemcarousel">
            <type>vertical</type>
            <color>00000000</color>
            <origin>1 1</origin>
            <pos>1 1</pos>
            <size>0.01 0.01</size>
            <logoScale>1</logoScale>
            <logoSize>0.01 0.01</logoSize>
            <maxLogoCount>0</maxLogoCount>
        </carousel>
        <text name="sys_line1" extra="true">
            <fontPath>./_art/BebasNeue.otf</fontPath>
            <alignment>left</alignment>
            <forceUppercase>1</forceUppercase>
            <color>FFFFFF</color>
            <fontSize>0.048</fontSize>
            <origin>0 0</origin>
            <pos>0.082 0.08</pos>
            <size>0 0</size>
        </text>
        <text name="sys_line2" extra="true">
            <fontPath>./_art/BebasNeue.otf</fontPath>
            <alignment>left</alignment>
            <forceUppercase>1</forceUppercase>
            <color>FFFFFF</color>
            <fontSize>0.18</fontSize>
            <origin>0 0</origin>
            <pos>0.082 0.088</pos>
            <size>0 0</size>
        </text>
        <text name="shortdescription" extra="true">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>
            <fontSize>0.021</fontSize>
            <color>262626</color>
            <origin>0 0</origin>
            <pos>0.084 0.345</pos>
            <size>0.320 0.033</size>
        </text>
        <text name="systemInfo">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <backgroundColor>00000000</backgroundColor>
            <forceUppercase>1</forceUppercase>
            <color>203040</color>
            <origin>0 0</origin>
            <pos>0.082 0.272</pos>
            <size>0.200 0.039</size>
            <fontSize>0.0315</fontSize>
        </text>
        <text name="longdescription" extra="true">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>
            <fontSize>0.021</fontSize>
            <color>262626</color>
            <lineSpacing>1.18</lineSpacing>
            <origin>0 0</origin>
            <pos>0.084 0.322</pos>
            <size>0.28 0.20</size>
        </text>
        <image name="buttonA" extra="true">
            <path>./_art/var/button.svg</path>
            <tile>false</tile>
            <origin>0.5 0.5</origin>
            <pos>0.945 0.955</pos>
            <size>0 0.045</size>
            <zIndex>50</zIndex>
        </image>
        <image name="topArrow" extra="true">
            <path>./_art/var/arrow.svg</path>
            <tile>false</tile>
            <origin>0.5 0.5</origin>
            <pos>0.5 0.045</pos>
            <size>0 0.025</size>
            <rotation>180</rotation>
            <zIndex>50</zIndex>
        </image>
        <image name="bottomArrow" extra="true">
            <path>./_art/var/arrow.svg</path>
            <tile>false</tile>
            <origin>0.5 0.5</origin>
            <pos>0.5 0.955</pos>
            <size>0 0.025</size>
            <zIndex>50</zIndex>
        </image>
        <image name="controller" extra="true">
            <path>./${system.theme}/art/controller.png</path>
            <tile>false</tile>
            <origin>0 0.5</origin>
            <pos>0.084 0.774</pos>
            <maxSize>0.35 0.35</maxSize>
        </image>

    </view>
    <view name="basic, detailed, video">
        <image name="background" extra="true">
            <tile>false</tile>
            <path>./${system.theme}/art/background.jpg</path>
            <size>1 1</size>
            <pos>0 0</pos>
        </image>
        <textlist name="gamelist">
            <selectorColor>1c1c1c</selectorColor>
            <selectedColor>F8F8F8</selectedColor>
            <selectorHeight>0.05</selectorHeight>
            <primaryColor>585858</primaryColor>
            <secondaryColor>888888</secondaryColor>
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <pos>0 0.0833</pos>
            <size>0.323 0.8513</size>
            <fontSize>0.03</fontSize>
            <lineSpacing>1.683</lineSpacing>
            <horizontalMargin>0.02864</horizontalMargin>
        </textlist>
        <image name="logo">
            <tile>false</tile>
            <origin>0.5 0.5</origin>
            <pos>0.115 0.04</pos>
            <maxSize>0.208 0.056</maxSize>
        </image>
        <text name="md_description">
            <fontPath>./_art/Acre.otf</fontPath>
            <color>818181</color>
            <fontSize>0.02</fontSize>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>
            <lineSpacing>1</lineSpacing>
            <pos>0.429 0.787</pos>
            <size>0.464 0.1111</size>
        </text>
        <!-- Define metadata -->
        <text name="md_lbl_rating, md_lbl_genre, md_lbl_players">
            <color>F8F8F8</color>
            <forceUppercase>0</forceUppercase>
            <fontPath>./_art/Acre.otf</fontPath>
            <fontSize>0.0186</fontSize>
        </text>
        <text name="md_genre, md_players">
            <color>888888</color>
            <forceUppercase>0</forceUppercase>
            <fontPath>./_art/Acre.otf</fontPath>
            <fontSize>0.0186</fontSize>
        </text>
        <!-- Place metadata -->
        <text name="md_lbl_rating">
            <pos>0.428 0.932</pos>
            <size>0.06 0.07</size>
        </text>
        <rating name="md_rating">
            <pos>0.5 0.957</pos>
            <size>0 0.020</size>
            <filledPath>./_art/var/star_filled.svg</filledPath>
            <unfilledPath>./_art/var/star_hollow.svg</unfilledPath>
        </rating>
        <text name="md_lbl_players">
            <pos>0.615 0.932</pos>
            <size>0.06 0.07</size>
        </text>
        <text name="md_players">
            <fontPath>./_art/Acre.otf</fontPath>
            <color>888888</color>
            <fontSize>0.0186</fontSize>
            <pos>0.672 0.932</pos>
            <size>0.06 0.07</size>
        </text>
        <text name="md_lbl_genre">
            <pos>0.770 0.932</pos>
            <size>0.06 0.07</size>
        </text>
        <text name="md_genre">
            <pos>0.817 0.932</pos>
            <size>0.4 0.07</size>
        </text>
        <!-- Extra Text Labels. Edit text values if needed.-->
        <text name="players_lbl_2, btn_a, btn_b, btn_x" extra="true">
            <fontPath>./_art/Acre.otf</fontPath>
            <color>888888</color>
            <fontSize>0.0186</fontSize>
        </text>
        <text name="btn_a" extra="true">
            <text>Enter</text>
            <pos>0.042 0.933</pos>
            <size>0.06 0.07</size>
        </text>
        <text name="btn_b" extra="true">
            <text>Return</text>
            <pos>0.155 0.933</pos>
            <size>0.06 0.07</size>
        </text>
        <text name="btn_x" extra="true">
            <text>Favorite</text>
            <pos>0.259 0.933</pos>
            <size>0.06 0.07</size>
        </text>
        <text name="players_lbl_2" extra="true">
            <text>players</text>
            <pos>0.689 0.932</pos>
            <size>0.06 0.07</size>
        </text>
        <text name="txt_descript" extra="true">
            <text>Description</text>
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <fontSize>0.0186</fontSize>
            <color>ffffff</color>
            <origin>0 0</origin>
            <pos>0.429 0.724</pos>
            <size>0.06 0.07</size>
        </text>
    </view>
    <feature supported="video">
        <view name="video">
            <video name="md_video">
                <origin>0.5 0.5</origin>
                <pos>0.66 0.38</pos>
                <maxSize>0.64 0.64</maxSize>
                <delay>2</delay>
                <showSnapshotNoVideo>true</showSnapshotNoVideo>
                <showSnapshotDelay>true</showSnapshotDelay>
            </video>
        </view>
    </feature>
</theme>
